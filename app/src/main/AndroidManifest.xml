<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.setmanu.freespacewar">
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name="dev.setmanu.freespacewar.loadScreen.LoadScreen"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.setmanu.freespacewar.menuScreen.MenuScreen"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="dev.setmanu.freespacewar.highScoreScreen.HighScoreScreen"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="dev.setmanu.freespacewar.settingsScreen.SettingsScreen"
            android:screenOrientation="fullSensor">

        </activity>
        <activity
            android:name="dev.setmanu.freespacewar.game.GameScreen"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="dev.setmanu.freespacewar.gameOverScreen.GameOverScreen"
            android:screenOrientation="fullSensor" />
    </application>
</manifest>